# ============================================================================
# Filler Word Filter Configuration
# ============================================================================
# This file contains environment variables for configuring the filler word
# filter plugin in LiveKit Agents.
#
# Copy this file to .env in your project root and customize as needed.
# ============================================================================

# ----------------------------------------------------------------------------
# Filler Words Configuration
# ----------------------------------------------------------------------------
# Comma-separated list of words/phrases to filter when agent is speaking.
# These will be ignored during agent speech but recognized when agent is quiet.
# 
# Default includes common English and Hindi fillers.
# Add language-specific fillers as needed.
FILLER_WORDS=uh,uhh,uhhh,um,umm,ummm,hmm,hmmm,er,err,ah,ahh,haan,accha

# Minimum confidence threshold (0.0 to 1.0) for speech detection.
# Speech below this confidence is more likely to be ignored.
# Lower values = more aggressive filtering (may miss real speech)
# Higher values = less aggressive filtering (may allow more fillers)
# Default: 0.6
FILLER_CONFIDENCE_THRESHOLD=0.6

# Minimum number of words required to trigger an interruption.
# Helps filter out very short utterances that might be background noise.
# Default: 1
FILLER_MIN_WORD_COUNT=1

# ----------------------------------------------------------------------------
# Model Configuration
# ----------------------------------------------------------------------------
# Override these to use different models for your agent

# Speech-to-Text Model
# See: https://docs.livekit.io/agents/models/stt/
STT_MODEL=deepgram/nova-3

# Language Model  
# See: https://docs.livekit.io/agents/models/llm/
LLM_MODEL=openai/gpt-4.1-mini

# Text-to-Speech Model
# See: https://docs.livekit.io/agents/models/tts/
TTS_MODEL=cartesia/sonic-2:9626c31c-bec5-4cca-baa8-f8ba9e84c8bc

# ----------------------------------------------------------------------------
# API Keys (Required)
# ----------------------------------------------------------------------------
# Add your API keys for the services you're using

# LiveKit Configuration
# Example: wss://example.livekit.cloud
LIVEKIT_URL=your_livekit_url
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key

# Deepgram API Key (for STT)
DEEPGRAM_API_KEY=your_deepgram_api_key

# Cartesia API Key (for TTS)
CARTESIA_API_KEY=your_cartesia_api_key

# ----------------------------------------------------------------------------
# Advanced Agent Configuration (Optional)
# ----------------------------------------------------------------------------

# Allow interruptions from users
# ALLOW_INTERRUPTIONS=True

# Minimum duration (seconds) of speech to trigger interruption
# MIN_INTERRUPTION_DURATION=0.5

# Minimum number of words to trigger interruption
# MIN_INTERRUPTION_WORDS=1

# Timeout (seconds) for detecting false interruptions
# FALSE_INTERRUPTION_TIMEOUT=1.5

# Whether to resume speech after false interruption
# RESUME_FALSE_INTERRUPTION=True

# Enable preemptive generation for faster responses
# PREEMPTIVE_GENERATION=True

# Audio features toggle (optional)
# When set to false, the audio feature path will be skipped which avoids costly
# librosa processing. Set to true to enable audio analysis.
ENABLE_AUDIO_FEATURES=false

# Choose fast audio extraction (numpy-only heuristics) to reduce CPU usage
# when GPU is not available. Default: true
AUDIO_FEATURES_FAST_MODE=true
